<div class="col-7 mx-auto">
  <h1><%= t(".title") %></h1>

  <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
    <div class="field">
      <%= f.label t("attributes.email") %>
      <br>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label t("attributes.password") %>
      <br>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="actions mt-3 text-right">
      <%= f.submit t(".submit"), id: "create-session", class: "btn btn-primary" %>
    </div>
  <% end %></div>