<h1><%= t(".title") %></h1>

<table class="table">
  <thead>
    <tr>
      <th>名前</th>
      <th>タスク数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.name %></td>
        <td><%= Task.where(id: label.id).count %></td>
        <td><%= link_to t("attributes.edit"), edit_label_path(label), id: "edit-label", class: "btn btn-primary" %></td>
        <td><%= link_to t("attributes.delete"), label, method: :delete, id: "destroy-label", class: "btn btn-danger", data: { confirm: t("attributes.destroy_confirm") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
