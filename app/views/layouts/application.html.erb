<!DOCTYPE html>
<html>
  <head>
    <title>CdpWebManyoTask</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <h1 class="nabvar-brand small">Task App</h1>
        <div class="collapse navbar-collapse justify-content-end">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 small">
            <% if logged_in? && current_user.admin? %>
              <li class="nav-item"><%= link_to t("application.admin_users_index"), admin_users_path, id: "users-index", class: "nav-link active" %></li>
              <li class="nav-item"><%= link_to t("application.admin_new_user"), new_admin_user_path, id: "add-user", class: "nav-link active" %></li>
              <li class="nav-item"><%= link_to t("application.tasks_index"), tasks_path, class: "nav-link active" %></li>
              <li class="nav-item"><%= link_to t("application.new_task"), new_task_path, class: "nav-link active" %></li>
              <li class="nav-item"><%= link_to t("application.labels_index"), labels_path, id: "labels-index", class: "nav-link active" %></li>
              <li class="nav-item"><%= link_to t("application.new_label"), new_label_path, id: "new-label", class: "nav-link active" %></li>
              <li class="nav-item"><%= link_to t("application.user_show"), user_path(current_user.id), id: "my-account", class: "nav-link active" %></li>
              <li class="nav-item"><%= link_to t("application.logout"), session_path(current_user.id), method: :delete, id: "sign-out", class: "nav-link active" %></li>
            <% elsif logged_in? %>
              <li class="nav-item"><%= link_to t("application.tasks_index"), tasks_path, id: "tasks-index", class: "nav-link active" %></li>
              <li class="nav-item"><%= link_to t("application.new_task"), new_task_path, id: "new-task", class: "nav-link active" %></li>
              <li class="nav-item"><%= link_to t("application.labels_index"), labels_path, id: "labels-index", class: "nav-link active" %></li>
              <li class="nav-item"><%= link_to t("application.new_label"), new_label_path, id: "new-label", class: "nav-link active" %></li>
              <li class="nav-item"><%= link_to t("application.user_show"), user_path(current_user.id), id: "my-account", class: "nav-link active" %></li>
              <li class="nav-item"><%= link_to t("application.logout"), session_path(current_user.id), method: :delete, id: "sign-out", class: "nav-link acitive" %></li>
            <% else %>
              <li class="nav-item"><%= link_to t("application.new_user"), new_user_path, id: "sign-up", class: "nav-link active" %></li>
              <li class="nav-item"><%= link_to t("application.new_session"), new_session_path, id: "sign-in", class: "nav-link active" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
