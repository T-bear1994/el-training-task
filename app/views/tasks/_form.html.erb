<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <br>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <br>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :deadline_on %>
    <br>
    <%= form.date_field :deadline_on %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <br>
    <%= form.select :priority, Task.priorities.keys.to_a, { include_blank: ""} %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <br>
    <%= form.select :status, Task.statuses.keys.to_a, { include_blank: ""} %>
  </div>

  <div class="field">
    <%= form.label :label %>
    <br>
    <%= form.collection_check_boxes(:label_ids, Label.all, :id, :name) %>
  </div>

  <div class="actions">
    <% if task.persisted? %>
      <%= form.submit id:'update-task' %>
    <% else %>
      <%= form.submit id:'create-task' %>
    <% end %>
  </div>
<% end %>
